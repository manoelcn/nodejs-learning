<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4 mb-4">
    <div class="card-header">
        <h4>{{titulo}}</h4>
    </div>
    <div class="card-body">
        <p class="card-text">{{descricao}}</p>
        <div class="mt-3 mb-3">
            <small>Categoria: <b>{{categoria.nome}}</b></small>
        </div>
        <div class="mt-3 mb-3">
            <small>Data de criação: <b>{{formatDate date "DD/MM/YYYY"}}</b></small>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex gap-2">
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary"><i class="bi bi-pencil"></i></button></a>

            <form action="/admin/postagens/deletar" method="post">
                <input type="hidden" name="id" id="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem encontrada!</h4>
{{/each}}