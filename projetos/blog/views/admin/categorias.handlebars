<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4 mb-4">
    <div class="card-header">
        <h4>{{nome}}</h4>
    </div>
    <div class="card-body">
        <small>Data de criação: <b>{{formatDate date "DD/MM/YYYY"}}</b></small>
    </div>
    <div class="card-footer">
        <div class="d-flex gap-2">
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary"><i class="bi bi-pencil"></i></button></a>

            <form action="/admin/categorias/deletar" method="post" class="">
                <input type="hidden" name="id" id="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h4 class="mt-3 ">Nenhuma categoria encontrada!</h4>
{{/each}}