<div class="alert alert-danger" role="alert">{{texto}}</div>
{{else}}

{{/each}}

<h2>Editar categoria:</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <div class="mb-3">
                <input type="hidden" name="id" id="id" value="{{categoria._id}}">
                <label for="nome" class="form-label">Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" value="{{categoria.nome}}" required>
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{categoria.slug}}" required>
            </div>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>